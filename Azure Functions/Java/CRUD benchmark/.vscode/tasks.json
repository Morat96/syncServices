{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "func",
            "command": "host start",
            "problemMatcher": "$func-watch",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}/createBench/target/azure-functions/createBench"
            },
            "dependsOn": "package"
        },
        {
            "label": "package",
            "command": "mvn clean package",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/createBench"
            }
        }
    ]
}